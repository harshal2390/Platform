<% layout("layouts/boilerplate") %>

<div class="row mt-4">
  <div class="col-lg-8 offset-lg-2">
    <h2 class="mb-4 text-center">Create a New Project</h2>
    <form
      action="/projects/create"
      method="POST"
      enctype="multipart/form-data"
      novalidate
      class="needs-validation"
    >
      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Project Title</label>
        <input
          type="text"
          name="project[title]"
          placeholder="Enter a catchy title"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Title is required.</div>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Project Description</label>
        <textarea
          name="project[description]"
          placeholder="Describe your project requirements"
          class="form-control"
          rows="4"
          required
        ></textarea>
        <div class="invalid-feedback">Description is required.</div>
      </div>

      <!-- Image Upload -->
      <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <input type="file" name="project[image]" class="form-control" />
      </div>

      <!-- Budget -->
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="budgetMin" class="form-label">Minimum Budget</label>
          <input
            type="number"
            name="project[budgetMin]"
            placeholder="e.g. 500"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3 col-md-4">
          <label for="budgetMax" class="form-label">Maximum Budget</label>
          <input
            type="number"
            name="project[budgetMax]"
            placeholder="e.g. 2000"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3 col-md-4">
          <label for="currency" class="form-label">Currency</label>
          <select name="project[currency]" class="form-select">
            <option value="USD" selected>USD</option>
            <option value="INR">INR</option>
            <option value="EUR">EUR</option>
            <option value="GBP">GBP</option>
          </select>
        </div>
      </div>

      <!-- Timeline -->
      <div class="mb-3">
        <label for="timeline" class="form-label">Timeline</label>
        <input
          type="text"
          name="project[timeline]"
          placeholder="e.g. 2 weeks, 1 month"
          class="form-control"
        />
      </div>

      <!-- Skills -->
      <div class="mb-3">
        <label for="skills" class="form-label">Required Skills</label>
        <input
          type="text"
          name="project[skills]"
          placeholder="e.g. JavaScript, Node.js, React"
          class="form-control"
        />
        <div class="form-text">Separate multiple skills with commas.</div>
      </div>

      <!-- Submit -->
      <button type="submit" class="btn btn-dark w-100 mt-3">
        <i class="fa-solid fa-plus"></i> Post Project
      </button>
    </form>
  </div>
</div>
