<% layout("layouts/boilerplate") %>
<div class="row mt-3">
  <h1 class="col-6 offset-3">Sign Up on Freelancing Platform</h1>
  <div class="col-6 offset-3">
    <form action="/signup" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input
          type="text"
          name="name"
          class="form-control"
          id="name"
          required
        />
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          name="email"
          class="form-control"
          id="email"
          required
        />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          class="form-control"
          id="password"
          required
        />
      </div>

      <!-- ✅ Role selection -->
      <div class="mb-3">
        <label for="role" class="form-label">I am a:</label>
        <select name="role" id="role" class="form-select" required>
          <option value="">-- Select Role --</option>
          <option value="freelancer">Freelancer</option>
          <option value="employer">Employer</option>
        </select>
      </div>

      <!-- ✅ Onboarding checkbox (shown only if Freelancer is selected) -->
      <div class="mb-3" id="onboardingCheckbox" style="display: none">
        <div class="form-check">
          <input
            class="form-check-input"
            type="checkbox"
            name="doOnboardingNow"
            id="doOnboardingNow"
            value="true"
          />
          <label class="form-check-label" for="doOnboardingNow">
            Complete Stripe Onboarding now (required to receive payouts)
          </label>
        </div>
      </div>

      <button class="btn btn-success">Sign Up</button>
    </form>
  </div>
</div>

<script>
  // ✅ Show checkbox only if freelancer is selected
  document.getElementById("role").addEventListener("change", function () {
    const onboardingBox = document.getElementById("onboardingCheckbox");
    if (this.value === "freelancer") {
      onboardingBox.style.display = "block";
    } else {
      onboardingBox.style.display = "none";
    }
  });
</script>
